@page
@using Microsoft.AspNetCore.Localization
@model BabyLife.Web.LoginModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = "Login";
    Layout = "~/Pages/Shared/_LoginLayout.cshtml";
    var requestCultureFeature = HttpContext.Features.Get<IRequestCultureFeature>();
    var requestCulture = requestCultureFeature.RequestCulture;
}
<div class="container main-block">
    <div class="d-flex justify-content-end h-100">
        <div class="card">
            <div class="card-header">
                <h1 class="display-4">@Localizer["welkome"]</h1>
            </div>
            <div class="card-body">
                <label class="pb-3">@Localizer["signin"]</label>
                <form method="POST">
                    <div class="input-group form-group pb-3 mt-2">
                        <div class="input-group-prepend">
                            <span class="input-group-text icons"><i class="fas fa-user icon"></i></span>
                        </div>
                        <input asp-for="LoginUser.Email" type="text" class="form-control inp" placeholder="e-mail" ]>
                        <span asp-validation-for="LoginUser.Email" class="text-danger"></span>
                    </div>
                    <div class="input-group form-group pb-4 mt-4">
                        <div class="input-group-prepend">
                            <span class="input-group-text icons"><i class="fas fa-key"></i></span>
                        </div>
                        <input type="password" asp-for="LoginUser.Password" class="form-control inp" placeholder="password">
                        <span asp-validation-for="LoginUser.Password" class="text-danger"></span>
                    </div>

                    <div class="form-group ">
                        <input type="submit" value=@Localizer["login"] id="btn_lgn" class="btn login_btn mt-3">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links mt-3">
                    @Localizer["noaccount"]<a asp-page="/Accounts/Register">@Localizer["register"]</a>
                </div>
                <div class="d-flex justify-content-center links mt-3">
                    @Localizer["careperson"]<a asp-page="/Index">@Localizer["logincareperson"]</a>
                </div>
            </div>
        </div>
    </div>
</div>