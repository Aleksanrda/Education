@page
@model BabyLife.Web.ProfileModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Pages/Shared/_UserLayout.cshtml";
}

<h1>Profile</h1>
<form method="post">
    <div asp-validation-summary="All"></div>
    <input asp-for="EditUser.Id" type="hidden" />
    <div>
        <label>Имя</label>
        <div>
            <input asp-for="EditUser.Email" />
            <span asp-validation-for="EditUser.Email"></span>
        </div>
    </div>
    <div>
        <label>Возраст</label>
        <div>
            <input asp-for="EditUser.Year" type="datetime" />
            <span asp-validation-for="EditUser.Year"></span>
        </div>
    </div>
    <div>
        <label>Share code</label>
        <div>
            <input asp-for="EditUser.ShareCode" />
            <span asp-validation-for="EditUser.ShareCode"></span>
        </div>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>
