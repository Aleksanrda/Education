@model IEnumerable<ProductList.DAL.Models.Product>

@{
    ViewBag.Title = "List of products";
}

    <h2>@ViewBag.Title</h2>

<p>
    @Html.ActionLink("Create new product", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.ActionLink(item.Name, "Details", new { id = item.Id })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "viewDialog", data_dialog_title = "DELETE PRODUCT" })
            </td>
        </tr>
    }

</table>
